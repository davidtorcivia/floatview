{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FloatView",
  "version": "0.2.0",
  "identifier": "com.floatview.app",
  "build": {
    "frontendDist": "../src",
    "beforeBuildCommand": "",
    "beforeDevCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Copyright (c) 2026 David Torcivia",
    "shortDescription": "A lightweight, always-on-top floating browser window for streaming media",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgwQTE1NDRGQkM5QUIzRUIKUldUcnM1cThUMVNoZ0tYMzRpRVFCYVM4bGhiZVZHNGN6Nnp3UStqL1BQelNsRWpuNUpDdFp6ZEIK",
      "endpoints": [
        "https://github.com/davidtorcivia/floatview/releases/latest/download/latest.json"
      ]
    }
  }
}
